@using LuckyCode.ViewModels
@using LuckyCode.WebFrameWork.HtmlExtensions
@model LuckyCode.ViewModels.SysUsersCreateViewModel

@{
    ViewBag.Title = "用户编辑";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            用户编辑
        </h1>
        <ol class="breadcrumb">
            <li><a href="/SysManager/Home"><i class="fa fa-dashboard"></i> 主页</a></li>
            <li class="active">用户编辑</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header"></div>
                    <form class="form-horizontal" method="post" action="">
                        <div class="box-body">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(a=>a.Id)
                            @Html.HiddenFor(a=>a.CreateTime)
                            <div class="form-group">
                                @Html.LabelFor(a => a.Username, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10 ">
                                    @Html.TextBoxFor(a => a.Username, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(a => a.Username)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(a => a.FullName, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10 ">
                                    @Html.TextBoxFor(a => a.FullName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(a => a.FullName)
                                </div>
                            </div>
                            
                            <div class="form-group">
                                @Html.LabelFor(a => a.Email, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10 ">
                                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(a => a.Email)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(a => a.Tel, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10 ">
                                    @Html.TextBoxFor(a => a.Tel, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(a => a.Tel)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(a => a.IsLock, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10 ">
                                    @Html.DropdownlistTrueOrFalse(a => a.IsLock, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(a => a.IsLock)
                                </div>
                            </div>
                            @*<div class="form-group">
                                @Html.LabelFor(a => a.RoleId, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10 ">
                                    @Html.DropDownListTreeFor(a => a.RoleId, Model.RoleItemEntities, "0", true, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(a => a.RoleId)
                                </div>
                            </div>*@
                        </div>
                        <div class="box-footer">
                            <div class="col-md-offset-3">
                                <button type="submit" class="btn btn-flat btn-success btn-padding">保存</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
