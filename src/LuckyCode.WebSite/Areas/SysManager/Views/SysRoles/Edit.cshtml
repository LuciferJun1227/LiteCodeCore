@using System.Threading.Tasks
@using LuckyCode.ViewModels.SiteManager
@model LuckyCode.ViewModels.SiteManager.SysRoleViewModel

@{
    ViewBag.Title = "编辑角色";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            编辑角色
        </h1>
        <ol class="breadcrumb">
            <li><a href="/SysManager/Home"><i class="fa fa-dashboard"></i> 主页</a></li>
            <li class="active">编辑角色</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header"></div>
                    <form class="form-horizontal" method="post" action="">
                        <div class="box-body">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(a=>a.Id)

                            @Html.Partial("_CreateOrEdit")
                            <div class="form-group">
                                @Html.LabelFor(model => model.IsDelete, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10 rule-multi-checkbox">
                                    @Html.CheckBoxFor(model => model.IsDelete)
                                    @Html.ValidationMessageFor(model => model.IsDelete, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <div class="col-md-offset-3">
                                <button type="submit" class="btn btn-flat btn-success btn-padding">保存</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
@section scripts{
    <script type="text/javascript">
        $('.rule-multi-checkbox').singleCheckbox();
        $('.rule-multi-redio').multiRadio();
    </script>
}