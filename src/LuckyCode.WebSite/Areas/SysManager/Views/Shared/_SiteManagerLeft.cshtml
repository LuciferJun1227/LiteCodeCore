                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="header">导航</li>
            @foreach (var m in Model.Where(a=>a.ControllerName=="").ToList())
            {
                <li class="@(m.IsExpand?"active":"") treeview">
                    <a href="#">
                        <i class='@(m.Icon==null?"fa fa-list-alt":m.Icon)'></i> <span>@m.ModuleName</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        @foreach (var mm in Model.Where(b => b.ParentId == m.Id && b.ModuleType == 0).ToList())
                        {
                            <li><a href="/@mm.AreaName/@mm.ControllerName/"><i class="@(mm.Icon==null?"glyphicon glyphicon-pushpin":mm.Icon)"></i> @mm.ModuleName</a></li>
                        }
                       
                        
                    </ul>
                </li>
            }
